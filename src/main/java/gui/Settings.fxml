<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="gui.SettingsController">
   <children>
      <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="750.0" style="-fx-background-color: #21232F;">
         <children>
            <Label text="Settings" textFill="#c2d3e4">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <TextField fx:id="name" minWidth="-Infinity" prefWidth="300.0" promptText="new name" style="-fx-background-color: #151720; -fx-text-fill: #FFFFFF;" visible="false">
                           <VBox.margin>
                              <Insets right="5.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="surname" minWidth="-Infinity" prefWidth="300.0" promptText="new surname" style="-fx-background-color: #151720; -fx-text-fill: #FFFFFF;" visible="false">
                           <VBox.margin>
                              <Insets right="5.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="nickname" minWidth="-Infinity" prefWidth="300.0" promptText="new nickname" style="-fx-background-color: #151720; -fx-text-fill: #FFFFFF;" visible="false">
                           <VBox.margin>
                              <Insets right="5.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="email" minWidth="-Infinity" prefWidth="300.0" promptText="new email" style="-fx-background-color: #151720; -fx-text-fill: #FFFFFF;" visible="false">
                           <VBox.margin>
                              <Insets right="5.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField minWidth="-Infinity" prefWidth="300.0" visible="false">
                           <VBox.margin>
                              <Insets right="5.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER">
                     <children>
                        <StackPane>
                           <children>
                              <Button mnemonicParsing="false" onAction="#changeName" prefWidth="150.0" style="-fx-background-color: #424967;" text="Change name" textFill="#c2d3e4">
                                 <StackPane.margin>
                                    <Insets />
                                 </StackPane.margin>
                              </Button>
                              <Button fx:id="okName" mnemonicParsing="false" onAction="#okName" prefWidth="150.0" style="-fx-background-color: #424967;" text="Ok" textFill="#c2d3e4" visible="false" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </StackPane>
                        <StackPane>
                           <children>
                              <Button mnemonicParsing="false" onAction="#changeSurname" prefWidth="150.0" style="-fx-background-color: #424967;" text="Change surname" textFill="#c2d3e4" />
                              <Button fx:id="okSurname" mnemonicParsing="false" onAction="#okSurname" prefWidth="150.0" style="-fx-background-color: #424967;" text="Ok" textFill="#c2d3e4" visible="false" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </StackPane>
                        <StackPane>
                           <children>
                              <Button mnemonicParsing="false" onAction="#changeNickname" prefWidth="150.0" style="-fx-background-color: #424967;" text="Change nickname" textFill="#c2d3e4" />
                              <Button fx:id="okNickname" mnemonicParsing="false" onAction="#okNickname" prefWidth="150.0" style="-fx-background-color: #424967;" text="Ok" textFill="#c2d3e4" visible="false" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </StackPane>
                        <StackPane>
                           <children>
                              <Button mnemonicParsing="false" onAction="#changeEmail" prefWidth="150.0" style="-fx-background-color: #424967;" text="Change email" textFill="#c2d3e4" />
                              <Button fx:id="okEmail" mnemonicParsing="false" onAction="#okEmail" prefWidth="150.0" style="-fx-background-color: #424967;" text="Ok" textFill="#c2d3e4" visible="false" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </StackPane>
                        <StackPane>
                           <children>
                              <Button mnemonicParsing="false" onAction="#changePassword" prefWidth="150.0" style="-fx-background-color: #424967;" text="Change password" textFill="#c2d3e4" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </StackPane>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#back" prefHeight="70.0" prefWidth="150.0" style="-fx-background-color: #424967;" text="Back" textFill="#c2d3e4">
               <font>
                  <Font size="30.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
